<Window x:Class="Ecom.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ecom" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:user="clr-namespace:Ecom.View.User"
        mc:Ignorable="d"
        Title="Ecom" 
        Height="800"
        Width="1400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="5"
            Background="{DynamicResource PrimaryHueMidBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                            materialDesign:ColorZoneAssist.Mode="PrimaryDark"
                            materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                            TabStripPlacement="Top"
                            Background="Transparent">
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Height="Auto"
                                        Width="Auto">
                                <materialDesign:PackIcon Kind="Home"
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"/>

                                <TextBlock Text="Home"
                                            HorizontalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>
                        
                    </TabItem>
                    
                    
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Height="Auto"
                                        Width="Auto">
                                <materialDesign:PackIcon Kind="Planner"
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"/>

                                <TextBlock Text="Planner"
                                            HorizontalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>

                    <TabItem MouseEnter="TabItem_MouseEnter">
                        <TabItem.Header>
                            <StackPanel Height="Auto"
                                        Width="Auto">
                                <materialDesign:PackIcon Kind="Calendar"
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"/>

                                <TextBlock Text="Shifts"
                                            HorizontalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>

                    </TabItem>

                    <TabItem MouseEnter="TabItem_MouseEnter">
                        <TabItem.Header>
                            <StackPanel Height="Auto"
                                        Width="Auto">
                                <materialDesign:PackIcon Kind="UserMultiple"
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"/>

                                <TextBlock Text="Staff"
                                            HorizontalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>

                        <ContentPresenter Content="{Binding WindowPage}"/>

                    </TabItem>
                </TabControl>
            </Grid>
            
            <!--Header-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="E C O M"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10 0"
                       FontSize="32"
                       FontFamily="Segoe UI Light"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            Margin="5">
                    <Button Width="40"
                            Height="40"
                            Padding="0"
                            Style="{StaticResource MaterialDesignFlatLightButton}"
                            Click="Minimise_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize"/>
                    </Button>
                    <Button Width="40"
                            Height="40"
                            Padding="0"
                            Style="{StaticResource MaterialDesignFlatLightButton}"
                            Click="Maximise_Click">
                        <materialDesign:PackIcon Kind="DockWindow"/>
                    </Button>
                    <Button Width="40"
                            Height="40"
                            Padding="0"
                            Style="{StaticResource MaterialDesignFlatLightButton}"
                            Click="Close_Click">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
